{% extends 'client/index.html.twig' %}



{% block body %}
    <body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create a Routine!</h1>

                            </div>

                            {{ form_start(form, {'method': 'post', 'action': path('register'), 'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="col-sm-60">
                                        {{ form_widget(form.nomcoach , {'attr': {'class':'form-control form-control-user', 'placeholder': 'NomCoach','required' : 'true'}}) }}
                                        {{ form_errors(form.nomcoach) }}
                                    </div>
                                </div>

                                <br>
                                <div class="col-sm-6">
                                    {{ form_widget(form.nomclient , {'attr': {'class':'form-control form-control-user', 'placeholder': 'NomClient','required' : 'true'}}) }}
                                    {{ form_errors(form.nomclient) }}
                                </div>
                            </div>

                            <br>
                            <div class="form-group">
                                {{ form_widget(form.nomtache , {'attr': {'class':'form-control form-control-user', 'placeholder': 'NomTache','required' : 'true'}}) }}
                                {{ form_errors(form.nomtache) }}
                            </div>

                            <br>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(form.avancement , {'attr': {'class':'form-control form-control-user', 'placeholder': 'Avancement','required' : 'true'}}) }}
                                    {{ form_errors(form.avancement) }}
                                </div>

                                <br>
                                <div class="col-sm-6">
                                    {{ form_widget(form.duree , {'attr': {'class':'form-control form-control-user', 'placeholder': 'Duree','required' : 'true'}}) }}
                                    {{ form_errors(form.duree) }}
                                </div>
                            </div>

                            <br>
                            <button class="btn btn-primary btn-user btn-block" type="submit">
                                Ajouter Routine
                            </button>
                            <hr>
                            {{ form_end(form) }}
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    </body>

{% endblock %}