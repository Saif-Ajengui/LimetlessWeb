{% extends 'admin/index.html.twig' %}

{% block title %}Hello ParticiperController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <table class="table table-striped table-hover">

        <thead>
        <tr>
            <h1 class="text-black-60">Nos événements</h1>
        </tr>
        <tr>
            <th><a href="">Afficher par événement</a></th>
        </tr>
        <tr>
            <th>Nom événement</th>
            <th>Nom participant</th>
            <th>prénom</th>
            <th>Sexe</th>
            <th>Statut</th>
            <th>Mail</th>

        </tr>
        </thead>

        <tbody>

        <tr {% for c in participant %}>


            <td>{{ c.nomEvenement }}</td>
            <td>{{ c.nom }}</td>
            <td> {{ c.prenom }}</td>
            <td> {{ c.sexe }}</td>
            <td> {{ c.statut }}</td>
            <td> {{ c.mail }}</td>



        </tr {% endfor %}>

        </tbody>
    </table>

</div>
{% endblock %}
